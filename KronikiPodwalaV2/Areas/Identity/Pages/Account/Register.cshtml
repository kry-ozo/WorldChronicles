@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}




<section class="login container-mobile">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-form">
            <h1 class="login-title">@ViewData["Title"]</h1>
        <div asp-validation-summary="ModelOnly" class="wrong-info"></div>
            <div class="option">
                <div class="input-group">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                </div>
            <span asp-validation-for="Input.Email" class="wrong-info"></span>
            </div>
            <div class="option">
                <div class="input-group">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                </div>
            <span asp-validation-for="Input.Password" class="wrong-info"></span>
            </div>
            <div class="option">
                <div class="input-group longer">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>
            <span asp-validation-for="Input.ConfirmPassword" class="wrong-info"></span>
            </div>
            <div class="checkbox-group">
                <button id="registerSubmit" type="submit" class="login-btn">Register</button>
            </div>
        </form>
    <div class="login-info">
        <p>
            Registering for the application unlocks a world of benefits tailored just for you. By creating an account, you gain access to exclusive features, personalized content, and seamless user experience. Enjoy perks such as saving preferences, participating in communities, and receiving updates tailored to your interests. Join our community today and take your experience to the next level!
        </p>

    </div>
    </section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
